<!-- HERO DO DESTINO -->
<section class="relative h-[70vh] bg-cover bg-center"
  style="background-image: url('/img/destinos/serraLeba (1).jpg');">
  
  <div class="absolute inset-0 bg-black/60"></div>

  <div class="relative z-10 h-full flex items-center">
    <div class="max-w-7xl mx-auto px-6 text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        Serra da Leba
      </h1>
      <p class="text-lg md:text-2xl max-w-2xl">
        Um dos cartões-postais mais icónicos de Angola, famoso pelas suas curvas
        espetaculares e vistas deslumbrantes.
      </p>
    </div>
  </div>
</section>

<!-- CONTEÚDO PRINCIPAL -->
<section class="py-20 bg-base-200">
  <div class="max-w-7xl mx-auto grid lg:grid-cols-3 gap-12 px-6">

    <!-- COLUNA PRINCIPAL -->
    <div class="lg:col-span-2 space-y-10">

      <!-- SOBRE O DESTINO -->
      <div class="bg-white rounded-3xl shadow-xl p-8">
        <h2 class="text-3xl font-bold mb-4">Sobre o destino</h2>
        <p class="text-lg text-slate-600 leading-relaxed">
          A Serra da Leba localiza-se na província do Namibe e é conhecida pela sua
          estrada sinuosa, considerada uma das mais belas de África. O local
          oferece vistas panorâmicas incríveis, clima fresco e contacto direto
          com a natureza.
        </p>
      </div>

      <!-- GALERIA -->
      <div class="bg-white rounded-3xl shadow-xl p-8">
        <h2 class="text-3xl font-bold mb-6">Galeria</h2>

        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <img src="/img/pub/pub- (7).jpg" class="rounded-xl object-cover h-48 w-full">
          <img src="/img/pub/pub- (6).jpg" class="rounded-xl object-cover h-48 w-full">
          <img src="/img/pub/pub- (2).jpg" class="rounded-xl object-cover h-48 w-full">
          <img src="/img/pub/pub- (3).jpg" class="rounded-xl object-cover h-48 w-full">
          <img src="/img/pub/pub- (4).jpg" class="rounded-xl object-cover h-48 w-full">
          <img src="/img/pub/pub- (5).jpg" class="rounded-xl object-cover h-48 w-full">
        </div>
      </div>

      <!-- ATIVIDADES -->
      <div class="bg-white rounded-3xl shadow-xl p-8">
        <h2 class="text-3xl font-bold mb-4">Atividades</h2>
        <ul class="space-y-3 text-lg text-slate-600">
          <li><span class="icon-[tabler--rosette-discount-check-filled] bg-green-600"></span> Trilhas e caminhadas</li>
          <li><span class="icon-[tabler--rosette-discount-check-filled] bg-green-600"></span>Fotografia panorâmica</li>
          <li><span class="icon-[tabler--rosette-discount-check-filled] bg-green-600"></span> Observação da natureza</li>
          <li><span class="icon-[tabler--rosette-discount-check-filled] bg-green-600"></span> Passeios turísticos guiados</li>
        </ul>
      </div>

      <!-- MAPA -->
      <div class="bg-white rounded-3xl shadow-xl p-8">
        <h2 class="text-3xl font-bold mb-4">Localização</h2>

        <iframe
          class="w-full h-80 rounded-2xl"
          src="https://www.google.com/maps?q=Serra+da+Leba&output=embed"
          loading="lazy"
        ></iframe>
      </div>

    </div>

    <!-- SIDEBAR -->
    <aside class="space-y-8">

      <!-- CARD DE RESERVA -->
      <div class="bg-white rounded-3xl shadow-xl p-8 sticky top-24 ">
        <h3 class="text-2xl font-bold mb-4">Reservar visita</h3>

        <form id="openPagamento" class="space-y-4" action="/reserva" method="post">
          <div>
            <label class="font-medium">Data check_in</label>
            <input type="date" id="check_in"  class="input w-full mt-2">
          </div>

          <div>
            <label class="font-medium">Data check_out</label>
            <input type="date" id="check_out" class="input w-full mt-2">
          </div>

          <div>
            <label class="font-medium">Número de pessoas</label>
            <input type="number" id="nPessoas" class="input w-full mt-2" min="1" value="1">
          </div>

          <button type="submit" class="btn btn-success">
            Reservar agora
          </button>
        </form>
      </div>

      <!-- INFORMAÇÕES RÁPIDAS -->
      <div class="bg-white rounded-3xl shadow-xl p-8">
        <h3 class="text-2xl font-bold mb-4">Informações</h3>

        <ul class="space-y-3 text-slate-600">
          <li class="flex gap-2">
            <span class="icon-[tabler--map-pin-filled] bg-red-600 size-6"></span>
            <strong> Província:</strong> Namibe
          </li>
          <li class="flex gap-2">
            <span class="icon-[tabler--alarm] size-6"></span>
            <strong id="duracao"> Duração:</strong> 1 dia
          </li>
          <li class="flex gap-2">
            <span class="icon-[tabler--sunset-2] bg-yellow-300 size-6"></span>
            <strong>Melhor época:</strong> Maio a Setembro
          </li>
          <li class="flex gap-2">
            <span class="icon-[tabler--car] size-6 bg-red-700"></span>
            <strong>Acesso:</strong> Estrada asfaltada
          </li>
        </ul>
      </div>

    </aside>

  </div>
</section>

<!-- CTA FINAL -->
<section class="py-20 bg-gradient-to-r from-green-600 to-green-800 text-white">
  <div class="max-w-5xl mx-auto text-center px-6">
    <h2 class="text-4xl font-bold mb-4">
      Pronto para viver esta experiência?
    </h2>
    <p class="text-lg mb-8">
      Reserve agora a sua visita à Serra da Leba e descubra uma das paisagens mais
      impressionantes de Angola.
    </p>
    <a href="/reservar/serra-da-leba" class="btn btn-outline btn-lg text-white">
      Fazer reserva
    </a>
  </div>
</section>


<!-- MODAL PAGAMENTO -->
