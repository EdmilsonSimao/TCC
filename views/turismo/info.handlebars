  class="fixed inset-0 bg-black/60 hidden items-center justify-center z-50 openPagamento">

  <div class="bg-white w-full max-w-lg md:left-1/3 md:translate-1/6 rounded-3xl shadow-2xl p-8 relative">

    <!-- FECHAR -->
    <button onclick="closePayment()"
      class="absolute close top-4 right-4 btn btn-sm btn-circle btn-ghost">✕</button>

    <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
      <span class="icon-[tabler--credit-card] size-8 bg-amber-500"></span>
      Pagamento
    </h2>

    <!-- RESUMO -->
    <div class="border rounded-xl p-4 mb-6 bg-base-200">
      <div class="flex justify-between mb-2">
        <span>Destino</span>
        <strong>Serra da Leba</strong>
      </div>
      <div class="flex justify-between mb-2">
        <span>Pessoas</span>
        <strong id="qtdPessoas">1</strong>
      </div>
      <div class="flex justify-between mb-2">
        <span>Data Ckeck_in</span>
        <strong id="dataEntrada">25.000 Kz</strong>
      </div>
      <div class="flex justify-between mb-2">
        <span>Data Check_out</span>
        <strong id="dataSaida"></strong>
      </div>
      <div class="flex justify-between mb-2">
        <span>Preço por pessoa</span>
        <strong>25.000 Kz</strong>
      </div>

      <hr class="my-3">
      <div class="flex justify-between text-xl font-bold">
        <span>Total</span>
        <span id="totalValor">25.000 Kz</span>
      </div>
    </div>

    <!-- MÉTODO DE PAGAMENTO -->
    <h3 class="font-semibold mb-3">Método de pagamento</h3>

    <div class="space-y-3">

      <div class="card bg-slate-900 p-2">
         <h1 class="cart-title text-gray-500 p-1">IBAN</h1>
        <div class="card-body bg-slate-800 p-3 rounded-lg">
         <p class="card-text text-teal-50">AO0000600.12345670.1001</p>
        </div>
      </div>

      <div class="card bg-slate-900 p-2">
         <h1 class="cart-title text-gray-500 p-1">Multcaixa express</h1>
        <div class="card-body bg-slate-800 p-3 rounded-lg">
         <p class="card-text text-teal-50">929778512</p>
        </div>
      </div>
    </div>

    <!-- COMPROVATIVO -->
    <div class="mt-5">
      <label class="font-medium">Comprovativo de pagamento</label>
      <label for="file"
        class="mt-2 flex items-center justify-center gap-2 border-2 border-dashed rounded-xl p-4 cursor-pointer">
        <span class="icon-[tabler--upload] size-6"></span>
        Enviar comprovativo
      </label>
      <input id="file" type="file" class="hidden">
    </div>

    <button type="submit" class="btn btn-success  btn-lg w-full mt-6">
      Confirmar pagamento
    </button>

  </div>
</div>
